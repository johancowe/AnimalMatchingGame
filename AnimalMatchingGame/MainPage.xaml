<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimalMatchingGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Button x:Name="PlayAgainButton" Text="Play again?" FontSize="Large" Clicked="PlayAgainButton_Clicked"/>
            
            <Label x:Name="TimeElapsed" Text="Time Elapsed: 0.0 seconds" FontSize="Large" />

            <!-- Leaderboard Section -->
            <Frame x:Name="LeaderboardFrame" BackgroundColor="#F5F5F5" BorderColor="#CCCCCC" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🏆 Top 3 Beste Tijden" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <BoxView HeightRequest="1" Color="#CCCCCC" />
                    <Label x:Name="Score1Label" Text="1. ---" FontSize="Small" />
                    <Label x:Name="Score2Label" Text="2. ---" FontSize="Small" />
                    <Label x:Name="Score3Label" Text="3. ---" FontSize="Small" />
                </VerticalStackLayout>
            </Frame>

            <Grid x:Name="AnimalButtons" IsVisible="False" HorizontalOptions="Center"
                  RowDefinitions="100,100,100,100"
                  ColumnDefinitions="100,100,100,100"
                  RowSpacing="5" ColumnSpacing="5">

                <!-- Row 0 -->
                <Button Grid.Row="0" Grid.Column="0" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="0" Grid.Column="1" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="0" Grid.Column="2" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="0" Grid.Column="3" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>

                <!-- Row 1 -->
                <Button Grid.Row="1" Grid.Column="0" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="1" Grid.Column="1" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="1" Grid.Column="2" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="1" Grid.Column="3" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>

                <!-- Row 2 -->
                <Button Grid.Row="2" Grid.Column="0" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="2" Grid.Column="1" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="2" Grid.Column="2" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="2" Grid.Column="3" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>

                <!-- Row 3 -->
                <Button Grid.Row="3" Grid.Column="0" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="3" Grid.Column="1" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="3" Grid.Column="2" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>
                <Button Grid.Row="3" Grid.Column="3" BackgroundColor="LightBlue" BorderColor="Black" BorderWidth="1" FontSize="60" Clicked="Button_Clicked"/>

            </Grid>

        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
